{
    "title": "DataCite v4.3",
    "description": "JSON representation of the DataCite v4.3 schema.",
    "type": "object",

    "properties": {
        "types": {
            "title": "Types",
            "type": "object",
            "properties": {
                "resourceType": {"title": "Resource type",
                                 "type": "string",
                                 "default":"Dataset"
                                },
                "resourceTypeGeneral": { 
                    "title": "Resource type general",
                    "type": "string",
                    "enum": [
                        "Audiovisual",
                        "Collection",
                        "DataPaper",
                        "Dataset",
                        "Event",
                        "Image",
                        "InteractiveResource",
                        "Model",
                        "PhysicalObject",
                        "Service",
                        "Software",
                        "Sound",
                        "Text",
                        "Workflow",
                        "Other"
                    ],
                    "default": "Dataset"
                }
            },
            "required": ["resourceType", "resourceTypeGeneral"]
        },
        "identifiers": {
            "title": "Identifiers",
            "type": "array",
            "items":{
                "type": "object",
                "properties": {
                    "identifier": {"type": "string",
                                  "default": "10.21946"},
                    "identifierType": {"type": "string",
                                      "default":"DOI"}
                },
                "required": ["identifier", "identifierType"]
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "creators": {
            "title": "Creators",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "title": "Name",
                        "type": "string"},
                    "nameType": {
                                    "title": "Name type",
                                    "type": "string",
                                    "enum": [
                                    "Organizational",
                                    "Personal"]
                                },
                    "givenName": {
                        "title": "Given name",
                        "type": "string"},
                    "familyName": {"title": "Family name",
                                   "type": "string"},
                    "nameIdentifiers": {
                        "title": "Name indentifiers",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "nameIdentifier": {"title": "Name identifier",
                                                   "type": "string"},
                                "nameIdentifierScheme": {"title": "Name indentifier scheme",
                                                         "type": "string"},
                                "schemeUri": {"title": "Scheme uri","type": "string", "format": "uri"}
                            },
                            "required": ["nameIdentifier", "nameIdentifierScheme"]
                        },
                        "uniqueItems": true
                    },
                    "affiliation": {
                        "title": "Affiliation",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {"title": "Name","type": "string"},
                                "affiliationIdentifier": {"title": "Affilition identifier","type": "string"},
                                "affiliationIdentifierScheme": {"title": "Affiliation identifier scheme","type": "string"},
                                "schemeUri": {"title": "Scheme uri", "type": "string", "format": "uri"}
                            },
                        "required": ["name"]
                        },
                        "uniqueItems": true
                    },
                    "lang": {"title": "Lang","type": "string"}
                },
                "required": ["name"]
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "titles": {
            "title": "Titles",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {"title": "Title","type": "string"},
                    "titleType": {
                        "title": "Title type",
                        "type": "string",
                        "enum": [
                            "AlternativeTitle",
                            "Subtitle",
                            "TranslatedTitle",
                            "Other"
                        ]
                    },
                    "lang": {"title": "Lang",
                             "type": "string"}
                },
                "required": ["title"]
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "publisher": {
            "title": "Publisher",
            "type": "string"            
        },
        "publicationYear": {
            "title": "Publication year",
            "type": "string",
            "format": "year"
        },
        "schemaVersion": {
            "title": "Schema version",
            "type": "string",
            "const": "http://datacite.org/schema/kernel-4"
        },
        "subjects": {
            "title": "Subjects",
            "type": "array",
            "items": {
                "title": "Subject",
                "type": "object",
                "properties": {
                    "subject": {"type": "string"},
                    "subjectScheme": {"type": "string"},
                    "schemeUri": {"type": "string", "format": "uri"},
                    "valueUri": {"type": "string", "format": "uri"},
                    "lang": {"type": "string"}
                },
                "required": ["subject"]
            },
            "uniqueItems": true
        },
        "contributors": {
            "title": "Contributors",
            "type": "array",
            "items": {
                "title": "Contributor",
                "type": "object",
                "properties": {
                    "contributorType": {
                                        "title": "Contributor type",
                                        "type": "string",
                                        "enum": [
                                            "ContactPerson",
                                            "DataCollector",
                                            "DataCurator",
                                            "DataManager",
                                            "Distributor",
                                            "Editor",
                                            "HostingInstitution",
                                            "Producer",
                                            "ProjectLeader",
                                            "ProjectManager",
                                            "ProjectMember",
                                            "RegistrationAgency",
                                            "RegistrationAuthority",
                                            "RelatedPerson",
                                            "Researcher",
                                            "ResearchGroup",
                                            "RightsHolder",
                                            "Sponsor",
                                            "Supervisor",
                                            "WorkPackageLeader",
                                            "Other"
                                        ]},
                    "name": {
                        "title": "Name",
                        "type": "string"
                    },
                    "nameType": {
                        "title": "Name type",
                        "type": "string",
                                    "enum": [
                                        "Organizational",
                                        "Personal"
                                    ]},
                    "givenName": {
                        "title": "Given name",
                        "type": "string"},
                    "familyName": {
                        "title": "Family name",
                        "type": "string"},
                    "nameIdentifiers": {
                        "title": "Name identifiers",                    
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "nameIdentifier": {
                                    "title": "Name identifier",
                                    "type": "string"},
                                "nameIdentifierScheme": {
                                    "title": "Name identifier scheme",
                                    "type": "string"},
                                "schemeUri": {
                                    "title": "Scheme uri",
                                    "type": "string", "format": "uri"}    
                            },                    
                            "required": ["nameIdentifier", "nameIdentifierScheme"]
                        },
                        "uniqueItems": true    
                    },                    
                    "affiliation": {
                        "title": "Affiliation",
                        "type": "array",          
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "title": "Name",
                                    "type": "string"},
                                "affiliationIdentifier": {
                                    "title": "Affiliation identifier",
                                    "type": "string"},
                                "affiliationIdentifierScheme": {
                                    "title": "Affiliation identifier scheme",
                                    "type": "string"},
                                "schemeUri": {
                                    "title": "Scheme uri",
                                    "type": "string", "format": "uri"}  
                            },
                            "required": ["name"]  
                        },
                        "uniqueItems": true                        
                    },
                    
                    "lang": {"type": "string"}
                },
                "required": ["contributorType", "name"]
            },
            "uniqueItems": true
        },
        "dates": {
            "title": "Dates",
            "type": "array",
            "items": {
                "title": "Date",
                "type": "object",
                "properties": {
                    "date": {
                        "title": "Date (format to be validated)",
                        "type": "string",
                        "format": "date"
                    },
                    "dateType": {        
                        "title": "Date type",
                        "type": "string",
                        "enum": [
                            "Accepted"
                            "Available",
                            "Copyrighted",
                            "Collected",
                            "Created",
                            "Issued",
                            "Submitted",
                            "Updated",
                            "Valid",
                            "Withdrawn",
                            "Other"
                        ]
                    },
                    "dateInformation": {
                        "title": "Date information",
                                        "type": "string"}
                },
                "required": ["date", "dateType"]
            },
            "uniqueItems": true
        },
        "language": {
            "title": "Language",
            "type": "string",
            "$comment": "Primary language of the resource. Allowed values are taken from  IETF BCP 47, ISO 639-1 language codes."
        },
        "alternateIdentifiers": {
            "title": "Alternate identifiers",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "alternateIdentifier": {
                        "title": "Alternate identifier",
                        "type": "string"},
                    "alternateIdentifierType": {
                        "title": " Alternate identifier type",
                        "type": "string"}
                },
                "required": ["alternateIdentifier", "alternateIdentifierType"]
            },
            "uniqueItems": true
        },
        "relatedIdentifiers": {
            "title": "Related identifiers",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "relatedIdentifier": {
                        "title": "Related identifier",
                        "type": "string"},
                    "relatedIdentifierType": {
                        "title": "Related identifier type",
                        "type": "string",
                        "enum": [
                            "ARK",
                            "arXiv",
                            "bibcode",
                            "DOI",
                            "EAN13",
                            "EISSN",
                            "Handle",
                            "IGSN",
                            "ISBN",
                            "ISSN",
                            "ISTC",
                            "LISSN",
                            "LSID",
                            "PMID",
                            "PURL",
                            "UPC",
                            "URL",
                            "URN",
                            "w3id"     
                        ]},
                    "relationType": {
                        "title": "Relation type",
                        "type": "string",
                                     "enum": [
                                         "IsCitedBy",
                                         "Cites",
                                         "IsSupplementTo",
                                         "IsSupplementedBy",
                                         "IsContinuedBy",
                                         "Continues",
                                         "IsDescribedBy",
                                         "Describes",
                                         "HasMetadata",
                                         "IsMetadataFor",
                                         "HasVersion",
                                         "IsVersionOf",
                                         "IsNewVersionOf",
                                         "IsPreviousVersionOf",
                                         "IsPartOf",
                                         "HasPart",
                                         "IsReferencedBy",
                                         "References",
                                         "IsDocumentedBy",
                                         "Documents",
                                         "IsCompiledBy",
                                         "Compiles",
                                         "IsVariantFormOf",
                                         "IsOriginalFormOf",
                                         "IsIdenticalTo",
                                         "IsReviewedBy",
                                         "Reviews",
                                         "IsDerivedFrom",
                                         "IsSourceOf",
                                         "IsRequiredBy",
                                         "Requires",
                                         "IsObsoletedBy",
                                         "Obsoletes"
                                     ]},
                    "relatedMetadataScheme": {
                        "title": "Related metadata schema",
                        "type": "string"},
                    "schemeUri": {
                        "title": "Scheme uri",
                        "type": "string", "format": "uri"},
                    "schemeType": {
                        "title": "Scheme type",
                        "type": "string"},
                    "resourceTypeGeneral": {
                        "title": "Resouce type general",
                        "type": "string",
                        "enum": [
                            "Audiovisual",
                            "Collection",
                            "DataPaper",
                            "Dataset",
                            "Event",
                            "Image",
                            "InteractiveResource",
                            "Model",
                            "PhysicalObject",
                            "Service",
                            "Software",
                            "Sound",
                            "Text",
                            "Workflow",
                            "Other"
                        ]}
                },
                "required": ["relatedIdentifier", "relatedIdentifierType", "relationType"],
                "if": {
                    "properties": {
                        "relationType": {"enum": ["HasMetadata", "IsMetadataFor"]}
                    }
                },
                "else": {
                    "$comment": "these properties may only be used with relation types HasMetadata/IsMetadataFor",
                    "properties": {
                        "relatedMetadataScheme": false,
                        "schemeUri": false,
                        "schemeType": false
                    }
                }
            },
            "uniqueItems": true
        },
        "sizes": {
            "title": "Sizes",
            "type": "array",
            "items": {
                "title": "Size",
                "type": "string"
            },
            "uniqueItems": true
        },
        "formats": {
            "title": "Formats",
            "type": "array",
            "items": {
                "title": "Format",
                "type": "string"
            },
            "uniqueItems": true
        },
        "version": {
            "title": "Version",
            "type": "string"
        },
        "rightsList": {
            "title": "Rights list",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "rights": {
                        "title": "Rights",
                        "type": "string"},
                    "rightsUri": {
                        "title": "Rights uri",
                        "type": "string", "format": "uri"},
                    "rightsIdentifier": {
                        "title":"Rights identifier",
                        "type": "string"},
                    "rightsIdentifierScheme": {
                        "title": "Rights identifier scheme",
                        "type": "string"},
                    "schemeUri": {
                        "title": "Scheme uri",
                        "type": "string", "format": "uri"},
                    "lang": {
                        "title": "Language",
                        "type": "string"}
                }
            },
            "uniqueItems": true
        },
        "descriptions": {
            "title": "Descriptions",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "description": {
                        "title": "Description",
                        "type": "string"},
                    "descriptionType": {
                    "type": "string",
                        "enum": [
                            "Abstract",
                            "Methods",
                            "SeriesInformation",
                            "TableOfContents",
                            "TechnicalInfo",
                            "Other"
                        ]
                    },
                    "lang": {
                        "title": "Language",
                        "type": "string"}
                },
                "required": ["description", "descriptionType"]
            },
            "uniqueItems": true
        },
        "geoLocations": {
            "title": "Geo locations",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "geoLocationPlace": {
                        "title": "Geo-location place",
                        "type": "string"},
                    "geoLocationPoint": {
                        "title": "Geo-location point",
                        "type": "object",
                        "properties": {
                            "pointLongitude": {
                                "title": "Point longitude",
                                "type": "string", "format": "longitude"},
                            "pointLatitude": {
                                "title": "Point latitude",
                                "type": "string", "format": "latitude"}
                        },
                        "required": ["pointLongitude", "pointLatitude"]
                    },
                    "geoLocationBox": {
                        "title": "Geo-location box",
                        "type": "object",
                        "properties": {
                            "westBoundLongitude": {
                                "title": "West bound longitude",
                                "type": "string", "format": "longitude"},
                            "eastBoundLongitude": {
                                "title":"East bound longitude",
                                "type": "string", "format": "longitude"},
                            "southBoundLatitude": {
                                "title":"South bound latitude",
                                "type": "string", "format": "latitude"},
                            "northBoundLatitude": {
                                "title":"North bound latitude",
                                "type": "string", "format": "latitude"}
                        },
                        "required": ["westBoundLongitude", "eastBoundLongitude", "southBoundLatitude", "northBoundLatitude"]
                    },
                    "geoLocationPolygons": {
                        "title": "Geo-location polygons",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "polygonPoints": {
                                    "title": "Polygon points",
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "pointLongitude": {
                                                "title": "Point longitude",
                                                "type": "string", "format": "longitude"},
                                            "pointLatitude": {
                                                "title": "Point latitude",
                                                "type": "string", "format": "latitude"}
                                        },
                                        "required": ["pointLongitude", "pointLatitude"]
                                    },
                                    "minItems": 4
                                },
                                "inPolygonPoint": {
                                    "title": "In polygon Point",
                                    "type": "object",
                                    "properties": {
                                        "pointLongitude": {
                                            "title": "Point longitude",
                                            "type": "string", "format": "longitude"},
                                        "pointLatitude": {
                                            "title": "Point latitude",
                                            "type": "string", "format": "latitude"}
                                    },
                                    "required": ["pointLongitude", "pointLatitude"]}
                            },
                            "required": ["polygonPoints"]
                        },
                        "uniqueItems": true
                    }
                }
            },
            "uniqueItems": true
        },
        "fundingReferences": {
            "title": "Funding references",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "funderName": {
                        "title": "Funder name",
                        "type": "string"},
                    "funderIdentifier": {
                        "title": "Funder indentifier",
                        "type": "string"},
                    "funderIdentifierType": {
                        "title": "Funder identifier type",
                        "type": "string",
                        "enum": [
                            "ISNI",
                            "GRID",
                            "Crossref Funder ID",
                            "ROR",
                            "Other"
                        ]
                    },
                    "awardNumber": {
                        "title": "Award number",
                        "type": "string"},
                    "awardUri": {
                        "title": "Award uri",
                        "type": "string", "format": "uri"},
                    "awardTitle": {
                        "title": "Award title",
                        "type": "string"}
                },
                "required": ["funderName"]
            },
            "uniqueItems": true
        }
    },
    
    "required": [
        "identifiers",
        "creators",
        "titles",
        "publisher",
        "publicationYear",
        "types",
        "schemaVersion"
    ]
}
